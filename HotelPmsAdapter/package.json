{
  "name": "hotel-pms-adapter",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": "17.3.x",
    "yarn": "1.22.x"
  },
  "scripts": {
    "start": "nodemon -r ts-node -r tsconfig-paths/register --files ./src/index.ts | bunyan",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:run": "yarn run typeorm migration:run -d ./src/config/datasource.ts",
    "migration:generate": "yarn run typeorm migration:create",
    "lint:js": "npx eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "lint": "yarn run lint:js",
    "build": "tsc && resolve-tspaths -p tsconfig.json",
    "test": "cross-env NODE_ENV=test jest --config jest.config.js --testTimeout=25000 --runInBand --verbose"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/jest": "^27.4.1",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-router": "^7.4.4",
    "@types/node": "^17.0.35",
    "@types/selenium-webdriver": "^4.1.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.16",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.8.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "body-parser": "^1.19.1",
    "bunyan": "^1.8.15",
    "cyrillic-to-translit-js": "^3.2.1",
    "dotenv": "^16.0.1",
    "hotel-automation-common": "link:../HotelCommon/dist",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.1.1",
    "pg": "^8.7.1",
    "query-string": "^7.1.0",
    "reflect-metadata": "^0.1.13",
    "selenium-webdriver": "^4.1.2",
    "typeorm": "^0.3.6"
  }
}
