{
  "include": ["src/*"],
  "exclude": ["node_modules/*", "jest.config.js"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "lib": ["es2020", "es2017", "DOM"],
    "module": "commonjs",
    "noUnusedParameters": true,
    "outDir": "dist",
    "paths": {
      "~/*": ["src/*"]
    },
    "suppressImplicitAnyIndexErrors": true,
		"esModuleInterop": true,
		"types": ["node", "jest"]
	}
}
