{
  "name": "hotel-automation-root",
  "license": "UNLICENSED",
  "scripts": {
    "start:server": "cd HotelPmsAdapter && yarn run start",
    "start:tg": "cd HotelTelebot && yarn run start",
    "build:common": "cd HotelCommon && yarn install && yarn run build",
    "install:all": "yarn install && yarn run build:common && yarn run install:server && yarn run install:tg",
    "install:server": "cd HotelPmsAdapter && yarn install",
    "install:tg": "cd HotelTelebot && yarn install",
    "lint:all": "yarn run lint:common && yarn run lint:server && yarn run lint:tg",
    "lint:common": "cd HotelCommon && yarn run lint",
    "lint:server": "cd HotelPmsAdapter && yarn run lint",
    "lint:tg": "cd HotelTelebot && yarn run lint",
    "migrate:server": "cd HotelPmsAdapter && yarn run migration:run",
    "audit:all": "yarn run audit:common && yarn run audit:server && yarn run audit:tg",
    "audit:common": "cd HotelCommon && yarn audit",
    "audit:server": "cd HotelPmsAdapter && yarn audit",
    "audit:tg": "cd HotelTelebot && yarn audit",
    "setupdev": "yarn run setupenv && yarn run createdirs && yarn run install:all && husky install",
    "checkenv": "zx scripts/checkEnv.mjs",
    "setupenv": "zx scripts/setupEnv.mjs",
    "createdirs": "zx scripts/createDirs.mjs",
    "dockerfile:server": "docker build -f .docker/images/PmsAdapter.Dockerfile -t quipex/pms-adapter .",
    "lintstaged": "zx scripts/lintStaged.mjs",
    "test:common": "cd HotelCommon && yarn test",
    "test:server": "cd HotelPmsAdapter && yarn test",
    "test:tg": "cd HotelTelebot && yarn test",
    "test:all": "yarn run test:common && yarn run test:server && yarn run test:tg",
    "test": "yarn run test:all"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.44.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "resolve-tspaths": "^0.7.4",
    "typescript": "^4.8.2",
    "zx": "^7.0.8"
  }
}
