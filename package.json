{
  "scripts": {
    "start:server": "cd HotelPmsAdapter && npm run start",
    "start:tg": "cd HotelTelebot && npm run start",
    "build:common": "cd HotelCommon && npm install && npm run build",
    "install:all": "npm run build:common && npm run install:server && npm run install:tg",
    "install:server": "cd HotelPmsAdapter && npm install",
    "install:tg": "cd HotelTelebot && npm install",
    "lint:all": "npm run lint:common && npm run lint:server && npm run lint:tg",
    "lint:common": "cd HotelCommon && npm run lint",
    "lint:server": "cd HotelPmsAdapter && npm run lint",
    "lint:tg": "cd HotelTelebot && npm run lint",
    "migrate:server": "cd HotelPmsAdapter && npm run migrate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.25.4",
    "typescript": "^4.5.4"
  }
}
